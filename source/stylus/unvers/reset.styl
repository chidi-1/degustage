
// Variables

$cGray = #4c4c4c
$cBlack = #000000

html *
  max-height 999999px //android font-size fix
  -webkit-font-smoothing antialiased 

html
body
  margin 0
  padding 0
  width 100%
  height 100%
  min-width 960px

body
  font-family $fAcrom
  font-size 14px
  color $cBlack
  min-height 100%
  height 100%
  position relative
  -webkit-text-size-adjust 100% // ios font-size fix
  background #fff


.container
  min-height 100%
  position relative
  min-width 920px
  overflow hidden
  background #ffffff

.page
  padding-bottom 60px

form,
p,
ul, ol,
dl, dt, dd,
h1, h2, h3, h4, h5, h6
  margin 0 
  padding 0 
  font-weight normal 
  list-style none 


/***** ie fix ****/
a img
  border none

// .section

.pull-right
  float right

.pull-left
  float left

.text-center
  text-align center

.text-right
  text-align right

.float-left
  float right
   
.section
  position relative

.justifyed
  display flex !important
  justify-content  space-between
  align-items flex-start
  
.width-wrap
  display block
  margin 0 auto
  width 920px

// отступы между горизонтальными li
ol, ul, .grid
  list-style none 
  font-size:0 
  line-height:0 
  letter-spacing:-1px 


li, .grid-item
  line-height:normal 
  letter-spacing:normal 
  display:inline-block 
  vertical-align top 
  zoom:1

.hidden-block
  display none !important

.roubl:after
  content " o"
  font-size inherit
  color inherit
  font-family als_rublregular
  font-weight inherit

.hidden-block
  display none !important