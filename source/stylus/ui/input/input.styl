.inp
    box-sizing border-box
    background transparent
    // background #000 
    box-shadow none
    outline none
    display block
    width auto
    padding-left 13px
    height 39px
    display block
    font-size 16px
    font-family $fGothamPro
    color #222222
    border 1px solid #d6d6d6
    border-radius 0
    -webkit-appearance none
    transition-property background-color border-color
    transition-duration 0.4s
    outline none
       
    &::placeholder
        opacity 1
        color #222222

    &::placeholder:focus
        opacity 0

.inp.error
  border 1px solid #ff0000 !important

        
