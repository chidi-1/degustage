.popup
  background #ffffff url("../img/popup-decor.jpg") no-repeat 50% 0
  background-size 100% auto
  width 1000px
  text-align center
  padding 143px 0 50px

  img
    display block
    margin 0 auto 38px
    width 270px

  span
    display block
    text-align center
    font-size 20px
    margin-bottom 10px

    a
      display inline-block
      vertical-align top
      text-decoration underline
      margin-left 5px

  label
    display block
    margin-bottom 25px

    input
      display none

    .psevdchecbox
      display inline-block
      vertical-align top
      width 13px
      height 13px
      border 1px solid #6f6f6f
      margin-right 10px
      margin-top 5px
      position relative

    input:checked +   .psevdchecbox:after
      position absolute
      content ""
      width 9px
      height 9px
      top  2px
      left 2px
      background #6f6f6f

    .content
      display inline-block
      vertical-align top

      span
        display block
        font-size 16px
        margin-bottom 0

        i
          font-style italic

        a
          display inline-block
          vertical-align baseline
          text-decoration none
          border-bottom  1px dashed $cBlack
          margin-left 5px
          line-height 18px

      span.town
        margin-left -37px

  .btn
    margin-bottom 29px

  span.trouble
    font-size 16px
