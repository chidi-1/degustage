.recipe
  display block

  .recipe-list
    display block
    padding-top 11px

    li
      display block
      margin-bottom 46px

      img,
      .recipe-list__content
        display inline-block
        vertical-align top

      img
        width 333px
        height 333px
        border-radius 333px

      .recipe-list__content
        width 410px
        text-decoration left
        padding-top 55px

        h3
          text-align left
          padding-bottom 25px

        p
          line-height 20px

    li:nth-child(even)
      img
        margin-left 112px

    li:nth-child(odd)
      img
        margin-left 42px
        margin-right 93px

  h4
    padding-bottom 26px

.recipe-cat-list
  display block
  padding-top 65px
  text-align left

  li
    display inline-block
    vertical-align top
    width 46%
    text-align center
    margin-bottom 29px
    padding 0 2%

    .img
      display block
      width 236px
      margin 0 auto 34px

      img
        display block
        width 236px
        height 236px
        border-radius 236px

    .title
      display block
      margin-bottom 10px

    p
      text-align center
      color #999999
      font-size 12px
      line-height 14px
      padding-bottom 3px

    .recipe-cat-list__icons
      display block
      text-align center

      &-el
        display inline-block
        vertical-align top
        margin 0 5px

        i, span
          color #999999
          font-size 12px

        i
          font-family $fIcons
          padding-right 5px

.load-more
  display block
  width 150px
  height 150px
  border 2px solid #7c7c7c
  text-align center
  line-height 150px
  font-size 16px
  color #000000
  font-family $fGothamPro
  margin 2px auto 50px
  border-radius 150px

.recipe-slider-wrap
  border-top 1px solid #cccccc
  padding-top 30px

  h4
    font-family $fGothamPro_l
    padding-bottom 40px
    font-size 17px
    text-transform uppercase

  .recipe-slider
    position relative
    margin 0 auto
    width 420px

    &__el
      width 210px
      text-align center

      a.img
        display block
        width 175px
        margin 0 auto 23px

        img
          width 175px
          height 175px
          border-radius 175px

      .name
        display block
        text-align center
        font-size 12px
        line-height 16px
        text-transform uppercase
        font-family $fGothamPro

    .owl-nav
      div
        position absolute
        width 14px
        height 24px
        top 80px
        cursor pointer

      .owl-prev
        left -25px
        background url("../img/sprite--arrow.png") no-repeat 0 0

      .owl-next
        right -25px
        background url("../img/sprite--arrow.png") no-repeat -14px 0

.recipe-item
  h4
    text-transform uppercase
    padding-bottom 13px

  h4 + p
    display block
    text-align center
    font-size 16px
    line-height 20px
    padding 0 100px 18px

  time
    display block
    text-align center
    font-size 12px
    color #666666
    font-style italic
    padding-bottom 19px

  iframe
    width 100%
    height 515px
    margin-bottom 34px

  &--share
    display block
    text-align center
    padding-bottom 47px

    div
      color #949494
      display inline-block
      vertical-align top
      margin 0 2px

    .icon-share
      font-size 26px
      padding-top 6px

    .icon-facebook,
    .icon-instagram,
    .icon-vk
      display inline-block
      vertical-align top
      width 28px
      height 28px
      border 2px solid #949494
      border-radius 30px
      font-size 18px
      text-align center
      line-height 28px

    .social-likes__button_facebook,
    .social-likes__button_vkontakte,
    .social-likes__icon_vkontakte,
    .social-likes__icon_facebook
      background none
      border none
      font-family $fIcons !important
      padding 0

    .social-likes__button_facebook:before
      content "\f09a"
      color #949494
      font-size 18px

    .social-likes__button_vkontakte:before
      content "\f189"
      color #949494
      font-size 18px

  .recipe-item-list
    display block

    li
      display block
      margin-bottom 50px

      img,
      .content
        display inline-block
        vertical-align top

      img
        width 335px
        height 335px
        border-radius 335px

      .content
        h4
          text-transform none
          text-align left

        p
          display block
          text-align left
          font-size 12px
          line-height 20px
          padding-bottom 15px
          padding-left 0
          padding-right 0

        ul
          padding-bottom 10px
          padding-left 75px

          li
            display block
            text-align left
            font-size 12px
            line-height 20px
            position relative
            margin-bottom 0

          li:before
            position absolute
            content ''
            width 3px
            height 3px
            border-radius 3px
            background $cBlack
            top 10px
            left -34px


    li:nth-child(odd)
      img
        margin-left 71px

      .content
        width 455px

    li:nth-child(even)
      img
        margin-left 35px
        margin-right 125px

      .content
        width 405px

  .recipe-slider-wrap
    padding-top 36px
    border-top 1px solid #cccccc
    padding-bottom 19px

    h4
      padding-bottom 29px

    .recipe-item-slider
      &__el
        width 200px

        &-img
          display block
          margin-bottom 30px

          img
            height 125px

        &-name
          text-transform uppercase
          display block
          text-align center
          font-family $fGothamPro_b
          font-size 12px
          line-height 16px
          margin-bottom 10px

        p
          font-family $fGothamPro_l
          font-size 12px
          line-height 15px
          text-align center
          color #999999

        &-price
          display block
          text-align center
          font-family $fGothamPro_b
          font-size 16px

      .owl-nav
        div
          position absolute
          width 14px
          height 24px
          top 95px
          cursor pointer

        .owl-prev
          left -25px
          background url("../img/sprite--arrow.png") no-repeat 0 0

        .owl-next
          right -25px
          background url("../img/sprite--arrow.png") no-repeat -14px 0

  .another-recipe
    padding-top 34px
    border-top 1px solid #cccccc
    padding-bottom 54px

    h4
      padding-bottom 37px

    &-list
      display block
      text-align center

      &__el
        display inline-block
        vertical-align top
        width 175px
        margin 0  16px

        .another-recipe-list__el-img
          width 175px
          height 175px
          border-radius 175px
          overflow hidden
          display block
          text-align center
          margin-bottom 20px

          img
            display block
            width 175px
            height 175px

        .another-recipe-list__el-name
          display block
          text-align center
          text-transform uppercase
          font-family $fGothamPro_b
          font-size 14px

  &-comment
    border-top 1px solid #cccccc
    padding-top 39px

    h4
      padding-bottom 30px

    .tabs__caption
      display block
      text-align center

      li
        display inline-block
        vertical-align top
        margin 0 1px
        width 94px
        height 32px
        position relative
        
      li.recipe-slider-comment-fb
        background url("../img/icon--fb-text.jpg") no-repeat 50% 50%
        background-size cover
      
      li.recipe-slider-comment-vk
        background #5b75a2

      li.recipe-slider-comment-vk:after
        color #ffffff
        font-size 20px
        line-height 32px
        left 50%
        top 50%

    .tabs__content
      display none

    .tabs__content.active
      display block

