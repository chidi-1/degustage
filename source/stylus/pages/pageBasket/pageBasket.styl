.basket

  .basket-empty
    padding 40px 0
    text-align center

    p
      font-size 16px

      a
        display inline-block
        vertical-align top
        text-decoration underline
        margin 0 5px

  .registration
    display block
    border-top 1px solid $cBlack
    padding-top 32px

  .location
    display block
    text-align center
    font-size 16px
    padding-bottom 11px

    a
      display inline-block
      vertical-align top
      border-bottom 1px dashed $cBlack
      margin-left 5px

  .basket-list
    display block

    &__el
      display block
      border-bottom 1px solid $cBlack
      padding 40px 0

      &-img,
      &-about,
      &-amount,
      &-total,
      &-remove,
      &-content
        display inline-block
        vertical-align top

      &-content
        width 685px
        padding-left 28px
        padding-top 26px

        .name
          display block
          padding-bottom 7px

          a
            text-transform uppercase
            font-size 20px
            font-family $fGothamPro

      &-img
        width 200px

        img
          width 100%

      &-about
        width 455px

        p
          font-size 12px
          line-height 14px

      &-amount
        width 90px
        text-align center

        span
          font-family $fGothamPro
          font-size 16px
          line-height 16px
          margin-top -2px
          display block

        a,
        .inp
          display inline-block
          vertical-align middle
          margin 0 5px
          color #666666
          font-size 20px
          line-height 30px
          margin-top -15px

        .inp
          width 28px
          height 28px
          line-height 28px
          border-radius 28px
          border 1px solid #666666
          text-align center
          outline none
          padding-left 0

      &-total
        text-align right
        width 90px

        span
          font-size 16px
          line-height 16px
          font-family $fGothamPro_b
          margin-top -2px
          display block

      &-remove
        padding-left 15px

        a
          width 15px
          height 15px
          background url("../img/icon--remove.jpg") no-repeat 0 0
          cursor pointer
          display block

  &-total
    padding-top 32px
    text-align center
    padding-bottom 35px

    span
      display block
      text-align center
      font-size 16px
      font-family $fGothamPro
      padding-bottom 22px

      i
        font-style normal
        padding-left 5px

    .btn-wrap
      display inline-block
      vertical-align top

      .btn
        padding 13px 20px 11px

    .continue
      display block
      font-size 16px
      font-family $fGothamPro
      text-decoration underline
      margin-top 10px

  &-checkout
    padding 32px 0 32px
    border-top 1px solid $cBlack

    h4
      padding-bottom 30px

    .checkout-label
      display block
      width 440px
      margin 0 auto
      text-align center

      span
        display block
        text-align center
        font-size 12px
        line-height 15px
        margin-bottom 25px

        strong
          font-family $fGothamPro_b

      .inp
        display block
        border 1px solid #e0e0e0
        text-align center
        height 29px
        margin-bottom 7px
        width 440px
        font-size 12px

      .inp.inp-m
        width 220px
        padding 0

      .inp.inp-s
        width 60px
        padding 0

      .inp:focus::placeholder
        opacity 0

      .btn-wrap
        padding-top 32px

      .radio-wrap
        display block
        text-align center
        padding-bottom 13px
        
        input
          outline none

        label
          display inline-block
          vertical-align top
          margin 0 10px
          cursor pointer

      .radio
        span
          display inline-block !important
          vertical-align top !important
          font-size 12px
          line-height 17px
          margin-left 3px
          margin-top 3px

        img
          display inline-block
          vertical-align top
          height 17px
          margin 2px 3px 0

      .select-wrap
        padding-bottom 7px

      .jq-selectbox__select
        width 225px
        height 28px
        border 1px solid #e0e0e0
        padding 0
        background none
        box-shadow none
        border-radius 0
        overflow hidden

        .jq-selectbox__select-text
          height 26px
          font-size 12px
          line-height 28px
          display block
          padding-right 25px
          text-align center

      .jq-selectbox__trigger
        border none
        top 2px
        right 2px
        bottom 2px
        width 22px
        background #c0c0c0
        height auto !important

        .jq-selectbox__trigger-arrow
          border-top 5px solid #ffffff
          top 12px
          right 6px

      .jq-selectbox__dropdown
        border-radius  0

        ul
          li
            font-size 12px
            line-height 16px
            display block

          li:hover
            background #c0c0c0

      .delivery-date
        display block
        text-align center
        padding-top 12px

        p
          font-size 12px
          line-height 14px
          padding-bottom 21px

          strong
            display inline-block
            vertical-align top
            padding 0 5px

        .js--calendar
          display block
          padding-bottom 5px

        .inp-date
          width 21px
          height 24px
          background url("../img/icon--calendar.png") no-repeat 0 0
          border none
          color transparent
          outline none

        .inp-date::placeholder
          color transparent

      .check-wrap
        display block
        width 440px
        margin 0 auto

        label
          display block
          margin-bottom 10px
          cursor pointer

          input
            display none

          .psevdochecbox
            display inline-block
            vertical-align top
            position relative
            border 1px solid #a8a8a8
            width 8px
            height 8px
            margin-right 17px
            margin-top 3px

          input:checked + .psevdochecbox:after
            content ''
            position absolute
            top 2px
            left 2px
            width 4px
            height 4px
            background #717171

          span
            display inline-block
            vertical-align top
            color #666600
            font-size 12px
            line-height 16px
            width 370px
            text-align left
            margin-bottom 0

  &-confirm
    display block
    padding-top 48px
    border-bottom 1px solid $cBlack

    ul
      text-align left

      li
        display inline-block
        vertical-align top
        width 440px
        margin-right 20px
        margin-bottom 20px

        .basket-confirm__el-img
          display inline-block
          vertical-align top
          width 210px
          margin-right 20px

          img
            width 100%

        .basket-confirm__el-content
          display inline-block
          vertical-align top
          width 200px
          padding-top 25px

          .name
            display block
            padding-bottom 7px

            a
              text-transform uppercase
              font-size 20px
              font-family $fGothamPro

          p
            font-size 12px
            line-height 14px

.Zebra_DatePicker.dp_visible
  background $cBlack
