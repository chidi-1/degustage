.item
  display block

  &-info
    padding-top 6px
    padding-bottom 46px

    &__params,
    &__about
      display inline-block
      vertical-align top
      width 440px

    &__params
      &-img
        display block
        padding-bottom 10px
        position relative
        width 410px
        margin 3px auto 33px

        img
          width 100%

      &-img.free-del:after
        position absolute
        content ""
        width 85px
        height 84px
        background url("../img/icon--free-delivery.png") no-repeat 0 0
        top -5px
        left -40px

      .mini-menu
        .wrap
          padding-left 25px

          .sub
            a
              display block
              font-size 16px
              margin-bottom 41px
              position relative
              font-family $fGothamPro

              strong
                display block
                font-size 20px
                line-height 16px
                font-weight normal

            a:before
              position absolute
              content '-'
              border 1px solid #858585
              border-radius  28px
              width 28px
              height 28px
              line-height 27px
              text-align center
              color #858585
              left -47px
              top 2px

            a.active:before
              content "+"

          .content
            display block
            height 0
            overflow hidden

            li
              display inline-flex
              align-items center
              justify-content flex-start
              margin-bottom 10px
              width 205px

              img
                display inline-block
                vertical-align top
                margin-right 13px
                width 17px
                height 17px

              span
                display inline-block
                vertical-align top
                width 160px
                padding-right 10px
                font-size 12px
                line-height 14px

            li:last-child
              padding-bottom 70px

    &__about
      h3
        padding-bottom 9px

      &-description
        display block
        text-align center
        color #999999
        font-size 12px
        line-height 16px
        padding-bottom 0

      &-text
        font-size 12px
        line-height 14px

      &-price
        display block
        text-align center
        font-family $fGothamPro
        font-size 16px

      .item-forms
        display block
        text-align center
        width 270px
        margin 0 auto 42px

        .form-buttons
          display block
          text-align center
          padding-top 8px
          padding-bottom 21px


          a,
          .inp
            display inline-block
            vertical-align middle
            margin 0 5px
            color #666666
            font-size 20px
            line-height 30px

          .inp
            width 28px
            height 28px
            line-height 28px
            border-radius 28px
            border 1px solid #666666
            text-align center
            outline none
            padding-left 0

        .btn
          width 100%
          font-size 15px
          padding 6px 0
          margin-bottom 4px
          color #a3a3a3
          border-color #a3a3a3

          i
            font-size 15px
            color #a3a3a3
            padding-right 5px

          i:after
            color #a3a3a3
            font-size 15px

        .hidden-form
          position relative

          .btn
            background #a3a3a3
            color #ffffff
            position relative

          .hidden-content
            position absolute
            z-index 5
            left -3px
            right -6px
            top 0
            background #ffffff
            box-shadow 0 0 10px rgba(0,0,0,0.3)
            width 0
            height 0
            overflow hidden
            padding 0
            opacity 0
            transition opacity 0.3s

            .inp
              border 1px solid #a3a3a3
              color #000000
              width 100%
              margin-bottom 21px

            .one-click
              width 220px
              margin 0 auto 38px

            label
              display block
              text-align center
              padding-bottom 23px

              input
                display none

              .psevdocheckbox
                display inline-block
                vertical-align top
                width 8px
                height 8px
                border 2px solid $cBlack
                margin-right 10px
                margin-left 10px
                position relative
                cursor pointer

              span
                position relative
                display inline-block
                vertical-align top
                font-size 12px
                line-height 12px
                font-family $fGothamPro
                width 140px
                cursor pointer

              input:checked + .psevdocheckbox:after
                position absolute
                content ''
                top 1px
                left 1px
                width 6px
                height 6px
                background $cBlack

            .btn.disabled
              opacity 0.5
              cursor  default

            p
              font-size 12px
              line-height 14px

            .jq-selectbox
              display block
              width 100%

            .jq-selectbox__select
              display block
              width 100%
              height auto
              border none
              box-shadow none
              background none
              padding 0
              margin 5px 0

              .jq-selectbox__select-text
                width 100% !important
                background rgba(0,0,0,0.02)
                box-shadow none
                font-size 12px
                line-height 14px
                padding 5px 0
                transition all 0.3s
                text-shadow none

            .jq-selectbox__select:hover
              .jq-selectbox__select-text
                background rgba(0,0,0,0.1)

            .jq-selectbox__trigger
              border-left none

              .jq-selectbox__trigger-arrow
                top 10px
                right 5px

            .jq-selectbox__dropdown
              right 0 !important
              width 100% !important

              ul
                display block
                border-radius 0

                li
                  min-height 0
                  font-size 12px
                  line-height 14px
                  display block
                  text-align left

                li:hover
                  background #a3abb1

        .hidden-form:hover
          .hidden-content
            display block
            padding 33px 30px
            overflow visible
            width auto
            height auto
            opacity 1

      &-img
        display block
        margin-left -17px
        margin-bottom 34px

        li
          display inline-block
          margin-left 17px

          img
            display block
            width 59px
            height 59px
            border-radius 59px

      &-text
        p
          display block
          font-size 12px
          line-height 16px
          margin-bottom 14px

  &-accessory
    border-top 1px solid #cccccc
    padding 55px 0 70px

    .owl-nav
      div
        position absolute
        width 14px
        height 24px
        top 120px
        cursor pointer

      .owl-prev
        left -25px
        background url("../img/sprite--arrow.png") no-repeat 0 0

      .owl-next
        right -25px
        background url("../img/sprite--arrow.png") no-repeat -14px 0

    &__el
      width 230px

      &-img
        display block
        padding-bottom 24px

        img
          display block
          height 160px
          margin 0 auto

      &-name
        display block
        font-size 14px
        line-height 16px
        padding-bottom 12px
        font-family $fGothamPro
        text-align center

      p
        display background
        text-align center
        color #999999
        font-size 12px
        line-height 16px
        padding-bottom 16px

      &-params
        display block
        text-align center

        span
          display inline-block
          vertical-align top
          font-size 12px
          line-height 16px
          font-family $fGothamPro
          padding 0 5px

        .icon-basket
          display inline-block
          vertical-align top
          margin 0 5px
          font-size 12px
          line-height 14px
          color #a7a7a6

  &-comment
    border-top 1px solid #cccccc
    padding 35px 0 38px

    &--img
      display inline-block
      vertical-align top
      width 148px
      height 148px
      border-radius 148px
      overflow hidden
      margin-left 6px
      margin-right 28px

      img
        min-width 100%
        min-height 100%

    &__text
      width 720px
      display inline-block
      vertical-align top
      padding-top 16px

      &-name
        font-size 18px
        font-family $fGothamPro

        strong
          font-weight normal
          text-transform uppercase
          padding-left 5px

      &-position
        font-size 12px
        line-height 11px
        font-style italic
        padding-bottom 10px

      p
        color #666666
        font-size 15px
        line-height 18px
        font-style italic

      span,
      p
        display block

    &--photo
      margin-left -30px
      padding-top 38px
      width 950px

      li
        margin-left 30px
        height 385px
        overflow hidden
        margin-bottom 23px

        img
          min-width 100%
          min-htight 100%

      &-l
        width 920px

      &-s
        width 445px

        a
          display flex
          align-items center
          justify-content center
          height 385px
          color #ffffff
          font-family $fGothamPro_b
          text-transform uppercase
          font-size 45px
          letter-spacing 1px
