.catalogue
  display block

  .catalogue-list
    display block
    padding-top 9px
    text-align center

    li
      display inline-block
      vertical-align top
      width 46%
      text-align center
      margin-bottom 29px
      padding 0 2%

      .img
        display block
        width 100%
        margin 0 auto 26px
        overflow hidden

        img
          display block
          height 243px

      .title
        display block
        margin-bottom 10px

      p
        text-align center
        color #999999
        font-size 12px
        line-height 14px
        padding-bottom 3px

      .price
        display block
        text-align center
        font-family $fGothamPro_b
        font-size 16px

  .catalogue-self
    padding-top 35px
    text-align center
    border-top 1px solid  #cccccc

    img
      display block
      margin 0 auto 33px

    .btn
      padding 13px 18px 11px

  .search-result--recipe
    border-top 1px solid $cBlack
    padding-top 35px

    .width-wrap
      position relative

    h4
      padding-bottom 39px

    .breadcrumbs-link
      position absolute
      right 0
      margin-top 4px

    .catalogue-list
      padding-top 0